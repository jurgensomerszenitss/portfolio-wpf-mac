<Window x:Class="Mdm.Windows.Desktop.UserSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mdm.Windows.Desktop"
        xmlns:views="clr-namespace:Mdm.Windows.Desktop.Views"
        mc:Ignorable="d"
        BorderBrush="{DynamicResource ColorMenuBackground}"
        BorderThickness="1"
        ShowInTaskbar="False"
        Padding="0"
        Title="Settings" Height="640" Width="480" ResizeMode="NoResize" WindowStartupLocation="Manual" WindowStyle="None">
    <DockPanel LastChildFill="True">
        <views:UserSettingsView x:Name="userSettingsView"/>
    </DockPanel>
</Window>
